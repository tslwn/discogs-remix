{
  "private": true,
  "name": "discogs-remix",
  "description": "",
  "license": "MIT",
  "scripts": {
    "build:remix": "remix build",
    "dev:remix": "node -r dotenv/config node_modules/.bin/remix dev",
    "start": "remix-serve build",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/app.css --minify",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/app.css --watch",
    "dev": "concurrently \"npm:dev:*\"",
    "build": "npm run build:css && npm run build:remix",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" --ignore-path .gitignore .",
    "postinstall": "remix setup node",
    "prepare": "husky install",
    "migrate:db": "source .env && cross-env DATABASE_URL_CONNECTION_POOL=$DATABASE_URL prisma migrate dev",
    "push:db": "source .env && cross-env DATABASE_URL_CONNECTION_POOL=$DATABASE_URL prisma db push",
    "build:vercel": "cross-env DATABASE_URL_CONNECTION_POOL=$DATABASE_URL prisma generate && prisma migrate deploy && npm run build:remix"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.5",
    "@prisma/client": "^3.8.1",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@remix-run/vercel": "^1.1.1",
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "clsx": "^1.1.1",
    "dotenv": "^10.0.0",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys-hook": "^3.4.4",
    "react-icons": "^4.3.1",
    "react-player": "^2.9.0",
    "remix": "^1.1.1",
    "remix-seo": "^0.0.3",
    "remix-utils": "^2.4.0",
    "tiny-invariant": "^1.2.0",
    "use-debounce": "^7.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.5.0",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-remix": "^0.0.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "prisma": "^3.8.1",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "husky": {
    "hooks": {
      "pre-commit": "CI=1 lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|mjs|ts|tsx|css|md|yml)": [
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  }
}
